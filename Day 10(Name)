#include <iostream>
#include <fstream>
using namespace std;

int main(){
	ofstream out("C:\\Users\\Anami\\Desktop\\Projects\\100daysofcode\\Day 10(name)\\file.txt",ios::app);
	string name;
	cout<<"Enter name: ";
	getline(cin,name);
	out<<name<<endl;
	out.close();
	
	ifstream in("C:\\Users\\Anami\\Desktop\\Projects\\100daysofcode\\Day 10(name)\\file.txt");
	cout<<"Stored names: "<<endl;
	while(getline(in,name)){
		cout<<name<<endl;
	}
	in.close();
	return 0;
}
